<UserControl x:Class="Gu.Wpf.Geometry.Demo.ZoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:effects="http://gu.se/Geometry"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Red" BorderThickness="1">
            <effects:ZoomViewer ClipToBounds="True">
                <Image Source="Images/Circles.png" />
            </effects:ZoomViewer>
        </Border>

        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
            <effects:ZoomViewer ClipToBounds="True">
                <Canvas Height="200" Width="200" Background="Blue">
                    <Rectangle Fill="Yellow" Height="100" Width="100"></Rectangle>
                </Canvas>
            </effects:ZoomViewer>
        </Border>
    </Grid>
</UserControl>

